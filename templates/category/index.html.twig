{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!{% endblock %}

{% block body %}
    <ul>
        {% for category in category %}
            <li>
                <a href="{{ path('category_show', { categoryName: category.name }) }}">{{category.name}}</a>
            </li>
        {% endfor %}
    </ul>

    <p>
        <a href="{{ path('category_new') }}">Créer une catégorie</a>
    </p>
    
{% endblock %}
